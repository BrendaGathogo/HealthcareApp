<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/back2"
    android:orientation="vertical"
    tools:context=".BookAppointmentActivity">

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:inputType="text"
        android:textColor="@color/colorWhite"
        android:textSize="25sp"></EditText>
    <EditText
        android:id="@+id/spl"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Specialization: "></EditText>
    <EditText
        android:id="@+id/city"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Nairobi"></EditText>
    <TextView
        android:id="@+id/addr"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Address: sdfdsssssssssssssssssss"></TextView>
    <TextView
        android:id="@+id/date"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:textSize="21sp"
        android:gravity="center_horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="19/12/120111"></TextView>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/setdate"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Date"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:textColor="@color/colorWhite"
        android:background="@color/purple_200">
    </androidx.appcompat.widget.AppCompatButton>

    <TextView
        android:id="@+id/time"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:textSize="21sp"
        android:gravity="center_horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="19/12/120111"></TextView>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/settime"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Time"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/back2">
    </androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/setappoinment"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fix appointment"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/back2"/>


</LinearLayout>